<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/main_menu_background">

    <Button
        android:id="@+id/start_game_button"
        style="@style/ButtonTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3F88B4"
        android:text="@string/neues_spiel_starten"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/join_game_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/join_game_button"
        style="@style/ButtonTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#C33E35"
        android:text="@string/spiel_beitreten"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/anleitung_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/anleitung_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#DAA133"
        android:fontFamily="@font/macondo"
        style="@style/ButtonTextStyle"
        android:text="@string/anleitung"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>